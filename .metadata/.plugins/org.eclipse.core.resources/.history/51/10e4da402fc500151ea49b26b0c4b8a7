package models;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.util.Enumeration;
import java.util.Properties;

public class User {
	
	public boolean add_user(String name, String pass)
	{
        File propFile = new File("users.properties");
		Properties prop = new Properties();
		prop.setProperty("username", name);
		prop.setProperty("password", pass);
		return false;
	}
	
	 public static boolean nameExists(File propFile, String name, String pass) {
	        Properties prop = new Properties();
	        InputStream input = null;
	        boolean exists = false;

	        try {
	            input = new FileInputStream(propFile);

	            prop.load(input);
	            input.close();

				Enumeration enuKeys = prop.keys();
				while (enuKeys.hasMoreElements()) {
					String key = (String) enuKeys.nextElement();
					String value = prop.getProperty(key);
				}

	            exists = prop.getProperty("username") != null
	                    && prop.getProperty("password") != null;

	        }catch (IOException e) {
	        	e.printStackTrace();
	        }   
	        

	        return exists;
	    }

}
