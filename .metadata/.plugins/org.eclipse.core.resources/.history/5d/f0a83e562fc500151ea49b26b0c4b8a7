package models;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class User {
	
	public boolean add_user(String name, String pass)
	{
        File propFile = new File("users.properties");
		Properties prop = new Properties();
		boolean exists = nameExists(propFile,name,pass);
		if (!exists){
			prop.setProperty("username", name);
			prop.setProperty("password", pass);
			return true;
		}else{
			return false;
		}
	}
	
	 public static boolean nameExists(File propFile, String name, String pass) {
	        Properties prop = new Properties();
	        InputStream input = null;
	        boolean exists = false;

	        try {
	            input = new FileInputStream(propFile);

	            prop.load(input);
	            input.close();

	        }catch (IOException e) {
	        	e.printStackTrace();
	        }   
	        
	        exists = prop.containsValue(name);

	        return exists;
	    }

}
