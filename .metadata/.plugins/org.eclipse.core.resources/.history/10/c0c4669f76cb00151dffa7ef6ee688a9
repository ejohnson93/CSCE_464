	<script>
		function myFunction() {
    		var password = document.getElementById("regForm").elements[1].value;
    		var confirm = document.getElementById("regForm").elements[2].value;
    	    //var request=new XMLHttpRequest();
   		    //request.open("POST", "http://localhost:8080/hotel_management/Register" , true);
    		if ( password != confirm ) {
    			alert("mismatch");
    			document.getElementById("regForm").elements[3].value = "notMatching";
    			document.regForm.submit();
    			//href.location = "http://localhost:8080/hotel_management/Register";
    			//request.send("confirm=mismatch");
    			//return false;
    		}else{
    			alert("match");
    			document.getElementById("regForm").elements[3].value = "matching";
    			document.regForm.submit();
    			//var param1 = "password=" + password + "&";
    			//var param2 = "username=" + document.getElementById("regForm").elements[0].value;
    			//href.location = "http://localhost:8080/hotel_management/Register";
    			//request.send(param1 + param2);
    			//return true;
    		}
		}
	</script>
