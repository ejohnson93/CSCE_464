<p id=mismatch color="red"></p>
<script>
function myFunction() {
    var password = document.getElementById("regForm").elements[1].value;
    var confirm = document.getElementById("regForm").elements[2].value;
    var text = "Passwords did not match, please try again!"
    if ( password != confirm ) {
    	alert("Passwords did not match");
    	document.getElementById("mismatch").innerHTML = text;
    }
}
</script>
